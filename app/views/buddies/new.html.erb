<div class="banner">
  <p id="flash">
  <%if flash[:faill].blank? == false%>
  <%=flash[:faill]%><br>
  <%end%>
  <%if flash[:name].blank? == false%>
  <%=flash[:name]%><br>
  <%end%>
  <%if flash[:hobby].blank? == false%>
  <%=flash[:hobby]%><br>
  <%end%>
  <%if flash[:town].blank? == false%>
  <%=flash[:town]%><br>
  <%end%>
   <%if flash[:town].blank? == false%>
  <%=flash[:town]%>
  <%end%>
</p>

  <div class="create_profile">
   <%= simple_form_for Buddie.new do |f| %>
   <div class="input">name</div>
   <%= f.input :name,label: false%>
   <div class="input">*gender</div>
   <%= f.select :gender, [['male'],['female']]%>
   <div class="input">*age</div>
   <%= f.select :age, [['20-25'],['25-30'],['31-35'],['36-40'],['41-45'],['46-50'],['51-60'],['61-70'],['70+']]%>
   <div class="input">*what is your hobby</div>
   <%= f.input :hobby,label: false%>
   <div class="input">tell us about your hobby</div>
   <%= f.text_area :hobby_description,label: false,size: "40x5" %>
   <div class="input" >*country</div>
   <%= f.collection_select(:countryname, Countrie.all, :name, :name) %>
   <div class="input">*city/town</div>
   <%= f.input :town,:label => false %>
   <div class="input">neighborhood</div>
   <%= f.input :neighborhood,:label => false %>
   <div class="input">*your level</div>
    <%= f.select :level, [['begginer'],['intemidiate'],['professional'],["not sure/haven't played for a while" ]]%>
   <div class="input photo">upload a photo</div>
   <%= f.input :photo,:label => false %>
   <%= f.input :photo_cache, as: :hidden %>
   <div><%= f.button :submit,'submit', class: "btn-success training_btn"%><% end %>

   </div>


 </div>

