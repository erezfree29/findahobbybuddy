<div class="banner">
 <h2>Log in</h2>
 <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
<div class="sign_up">
  <div class="form-inputs">
    <%= f.input :email,
                required: false,
                autofocus: true,
                input_html: { autocomplete: "email" } %>
    <%= f.input :password,
                required: false,
                input_html: { autocomplete: "current-password" } %>
    <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
  </div>
</div>
  <div class="form-actions">
    <%= f.button :submit, "Log in" %>
  </div>
 <% end %>
<%= render "devise/shared/links" %>
</div>
<style>
  .banner {
  height:100vh;
  color:white;
  background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('https://images.pexels.com/photos/861464/pexels-photo-861464.jpeg?auto=compress&cs=tinysrgb&dpr=2&h=650&w=940');}
 @media (max-width: 767px) {
   .sign_up{
    width:50vw;
    margin-left:6px;
    margin-top:10px;
    color:white;
   }
}

@media (min-width: 767px) {
   .sign_up{
    width:30vw;
     margin-left:6px;
    margin-top:10px;
   }
}

@media (min-width: 1200px) {
   .sign_up{
    width:12vw;
    margin-left:6px;
    margin-top:10px;
    color:white;

   }
}

</style>
