<div class="index_banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('https://res.cloudinary.com/erezfriemagor/image/upload/v1547594461/pexels-photo-1688253.jpg');">
   <%if (Buddie.find(@message[:sending_buddie_id]).user_id != current_user.id )%>
<table>
<tr>
    <th>From</th>
    <th>     </th>
    <th>Received</th>
  </tr>
<tr>

<td><%= link_to buddy_path(@message[:sending_buddie_id]) do %><%=Buddie.find(@message[:sending_buddie_id]).name%> </td><%end%>
<td><%= link_to buddy_path(@message[:sending_buddie_id]) do %><div class="trainershowcircle" style="background-image: url(<%=Buddie.find(@message[:sending_buddie_id]).photo%>)"></div></td><%end%>
<td> <%=@message.date%> <%=@message.time.hour%>:<%=@message.time.min%></td>
</tr>
</table>
<h3><%=Buddie.find(@message[:sending_buddie_id]).name%> said</h3>
<div id="content">
 <%=@message.content%>
</div>
 <%= link_to "reply",new_buddy_message_path(Buddie.find(@message[:sending_buddie_id])), class: "btn btn-primary"%>
</div>

<%else%>

<table>
<tr>
    <th>To</th>
    <th>     </th>
    <th>Sent</th>
  </tr>
<tr>

<td><%= link_to buddy_path(@message[:receving_buddie_id]) do %><%=Buddie.find(@message[:receving_buddie_id]).name%> </td><%end%>
<td><%= link_to buddy_path(@message[:receving_buddie_id]) do %><div class="trainershowcircle" style="background-image: url(<%=Buddie.find(@message[:receving_buddie_id]).photo%>)"></div></td><%end%>
<td> <%=@message.date%> <%=@message.time.hour%>:<%=@message.time.min%></td>
</tr>
</table>
<h3>you said</h3>
<div id="content">
 <%=@message.content%>
<%end%>





